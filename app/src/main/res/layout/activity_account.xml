<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".SavingActivity">

    <TextView
        android:layout_width="385dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Savings"
        android:textSize="35sp"
        android:gravity="center"
        android:id="@+id/savingTitle"
        android:layout_marginTop="60dp"
        android:layout_gravity="center_horizontal"
        android:inputType="none" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Number:"
        android:textSize="20sp"
        android:id="@+id/accNoLabel"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Type:"
        android:textSize="20sp"
        android:id="@+id/accTypeLabel"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available:"
        android:textSize="20sp"
        android:id="@+id/savingAmountInput"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="250dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000000001"
        android:textSize="20sp"
        android:id="@+id/accNoInput"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="200dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textSize="20sp"
        android:id="@+id/accTypeInput"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="200dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$10,000,000.00"
        android:textSize="20sp"
        android:id="@+id/amountInput"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="200dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:text="Log out"
        android:textSize="10sp"
        android:id="@+id/logOutBt"
        android:layout_gravity="right|top"
        android:textStyle="normal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transaction History"
        android:id="@+id/historyBt"
        android:layout_gravity="center_horizontal"
        android:background="#ac838383"
        android:layout_marginTop="350dp" />
</FrameLayout>
