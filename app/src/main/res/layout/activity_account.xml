<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".SavingActivity">

    <TextView
        android:layout_width="385dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Account Name"
        android:textSize="35sp"
        android:gravity="center"
        android:id="@+id/savingTitle"
        android:layout_gravity="center_horizontal"
        android:inputType="none"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Number:"
        android:textSize="20sp"
        android:id="@+id/accNoLabel"
        android:layout_above="@+id/savingAmountInput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="154dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available/Balance:"
        android:textSize="20sp"
        android:id="@+id/savingAmountInput"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000000001"
        android:textSize="20sp"
        android:id="@+id/accNoInput"
        android:layout_alignTop="@+id/accNoLabel"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="balance"
        android:textSize="20sp"
        android:id="@+id/amountInput"
        android:layout_alignTop="@+id/savingAmountInput"
        android:layout_alignLeft="@+id/accNoInput"
        android:layout_alignStart="@+id/accNoInput" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:text="Log out"
        android:textSize="10sp"
        android:id="@+id/logOutBt"
        android:layout_gravity="right|top"
        android:textStyle="normal"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="1037dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transaction History"
        android:id="@+id/historyBt"
        android:layout_gravity="center_horizontal"
        android:background="#ac838383"
        android:layout_below="@+id/amountInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/accountLogout"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/accBackButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
